# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                             controllers.todo.TodoController.home

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)

GET     /categoryList                 controllers.todo.TodoController.categoryList

GET     /category/$id<[0-9]+>         controllers.todo.TodoController.categoryShow(id: Long)

GET     /category/store               controllers.todo.TodoController.categoryRegister

POST    /category/store               controllers.todo.TodoController.categoryStore

GET     /category/$id<[0-9]+>/edit    controllers.todo.TodoController.categoryEdit(id: Long)

POST    /category/$id<[0-9]+>/update  controllers.todo.TodoController.categoryUpdate(id: Long)